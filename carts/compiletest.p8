-- PICO-8 Comprehensive Test Cart
-- Tests various PICO-8 features for compilation

-- Global variables
x = 64
y = 64
t = 0

function _init()
    print("comprehensive test loaded")
    cls()
    -- Test music
    music(0)
end

function _update()
    t += 1
    
    -- Test input
    if btn(0) then x -= 1 end
    if btn(1) then x += 1 end
    if btn(2) then y -= 1 end
    if btn(3) then y += 1 end
    
    -- Wrap around screen
    x = x % 128
    y = y % 128
    
    -- Test sound effects
    if btnp(4) then
        sfx(0)
    end
end

function _draw()
    cls(1)
    
    -- Test text rendering
    print("pico-8 test cart", 20, 10, 7)
    print("compilation test", 20, 20, 11)
    print("time: "..t, 20, 30, 6)
    
    -- Test shapes
    circfill(x, y, 8, 8)
    circfill(x, y, 6, 14)
    
    -- Test sprites (if any exist)
    spr(1, x-4, y-4)
    
    -- Test lines and rectangles
    rect(10, 50, 118, 100, 5)
    line(10, 110, 118, 110, 12)
    
    -- Test palette cycling
    local c = (t/10) % 16
    circfill(100, 20, 5, c)
    
    -- Test math functions
    local wave = sin(t/30) * 10
    pset(20 + wave, 120, 10)
end

